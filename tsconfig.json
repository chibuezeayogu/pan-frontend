{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ES6",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
